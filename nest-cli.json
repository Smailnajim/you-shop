{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/you-shop/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/you-shop/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/you-shop",
  "projects": {
    "authentification": {
      "type": "application",
      "root": "apps/authentification",
      "entryFile": "main",
      "sourceRoot": "apps/authentification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authentification/tsconfig.app.json"
      }
    },
    "catalogue": {
      "type": "application",
      "root": "apps/catalogue",
      "entryFile": "main",
      "sourceRoot": "apps/catalogue/src",
      "compilerOptions": {
        "tsConfigPath": "apps/catalogue/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    }
  }
}