// This is your Prisma schema file for the authentification service

generator client {
  provider = "prisma-client"
  output   = "../../../node_modules/@prisma/client-auth"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

model Role {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  permitions String[]
  users      User[]
}

model User {
  id     Int     @id @default(autoincrement())
  role   Role    @relation(fields: [roleId], references: [id])
  roleId Int
  email  String  @unique
  name   String?
}
