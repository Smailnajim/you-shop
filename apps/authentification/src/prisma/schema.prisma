// This is your Prisma schema file for the authentification service

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  permitions String[]
  users      User[]
}

model User {
  id            Int     @id @default(autoincrement())
  role          Role    @relation(fields: [roleId], references: [id])
  roleId        Int
  firstName     String?
  lastName      String?
  email         String  @unique
  password      String
  refreshTokens String[]
}
