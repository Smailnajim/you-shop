// This is your Prisma schema file for the catalogue service

generator client {
  provider = "prisma-client"
  output   = "../../../node_modules/@prisma/client-catalogue"
}

datasource db {
  provider = "postgresql"
  url      = env("CATALOGUE_DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id            Int      @id @default(autoincrement())
  category      Category @relation(fields: [categoryId], references: [id])
  categoryId    Int
  price         Float
  quantity      Int
  visible       Boolean
  quantityAlert Int
}