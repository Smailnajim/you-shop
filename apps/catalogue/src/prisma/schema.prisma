generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  produits Produits[]
}

model Produits {
  id            Int        @id @default(autoincrement())
  name          String     @unique
  prix          Float
  quantity      Int
  quantityAlert Int        @default(5)
  visible       Boolean
  SKU           String[]
  category      Categories @relation(fields: [categoryId], references: [id])
  categoryId    Int
}
